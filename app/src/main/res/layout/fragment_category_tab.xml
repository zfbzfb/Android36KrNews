<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/color_bg_white"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/category_back"
        android:layout_width="@dimen/velcom_logo_bottom_margin"
        android:layout_height="@dimen/velcom_logo_bottom_margin"
        android:layout_margin="@dimen/home_category_back"
        android:src="@mipmap/news_toolbar_icon_back"/>

   <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
